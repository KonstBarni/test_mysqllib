{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++ : g++ activity generated file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}/*cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lmysqlclient",
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "problemMatcher" : "$g++",
                "group":{"kind":"build", "isDefault" : true},
                "detail":"compiler: /usr/bin/g++"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}